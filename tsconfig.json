{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lyxs/angular": ["libs/angular/src/public_api.ts"],
      "@lyxs/angular/routing": ["libs/angular/routing/src/public_api.ts"],
      "@lyxs/angular/ui": ["libs/angular/ui/src/public_api.ts"],
      "@lyxs/angular/pagination": ["libs/angular/pagination/src/public_api.ts"],
      "@lyxs/angular/registry": ["libs/angular/registry/src/public_api.ts"],
      "@lyxs/angular/internal": ["libs/angular/internal/src/public_api.ts"],
      "@lyxs/angular/populate": ["libs/angular/populate/src/public_api.ts"],
      "@lyxs/angular/meta": ["libs/angular/meta/src/public_api.ts"],
      "@lyxs/nest": ["libs/nest/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
