{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@frrri/nest-crud/internal": [
        "libs/nest-crud/internal/src/public_api.ts"
      ],
      "@frrri/nest-crud/common": [
        "libs/nest-crud/common/src/public_api.ts"
      ],
      "@frrri/nest-crud": [
        "libs/nest-crud/src/public_api.ts"
      ],
      "@frrri/nest-crud-json-server": [
        "libs/nest-crud-json-server/src/public_api.ts"
      ],
      "@frrri/nest-crud-mongoose": [
        "libs/nest-crud-mongoose/src/public_api.ts"
      ],
      "@frrri/router-middleware/operators": [
        "libs/router-middleware/operators/src/public_api.ts"
      ],
      "@frrri/router-middleware/internal": [
        "libs/router-middleware/internal/src/public_api.ts"
      ],
      "@frrri/router-middleware": [
        "libs/router-middleware/src/public_api.ts"
      ],
      "@frrri/ngxs/pagination": [
        "libs/ngxs/pagination/src/public_api.ts"
      ],
      "@frrri/ngxs/internal": [
        "libs/ngxs/internal/src/public_api.ts"
      ],
      "@frrri/ngxs": [
        "libs/ngxs/src/public_api.ts"
      ],
      "@frrri/ngxs-http": [
        "libs/ngxs-http/src/public_api.ts"
      ],
      "@frrri/ui": [
        "libs/ui/src/public_api.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}